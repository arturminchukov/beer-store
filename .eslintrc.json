{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "airbnb",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/prefer-stateless-function": 0,
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "react/jsx-tag-spacing": 0,
        "react/jsx-one-expression-per-line": 0,
        "object-curly-spacing": [
            "error",
            "never",
            {
                "objectsInObjects": false,
                "arraysInObjects": false
            }
        ],
        "import/prefer-default-export": 0,
        "no-underscore-dangle": 0,
        "jsx-quotes": [
            "error",
            "prefer-single"
        ],
        "max-len": [
            "error",
            125
        ],
        "react/prop-types": 0,
        "no-plusplus": 0,
        "react/destructuring-assignment": 0,
        "consistent-return": "off",
        "global-require": "off",
        "block-spacing": "off",
        "import/no-dynamic-require": "off",
        "prefer-const": "off",
        "func-names": "off",
        "class-methods-use-this": "off"
    }
}
